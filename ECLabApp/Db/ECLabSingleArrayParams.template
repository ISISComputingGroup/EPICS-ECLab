record(waveform, "$(P)$(Q):C$(CHAN):T:$(TECH):$(PARAM)")
{
    field(DESC, "$(DESC)")
    field(DTYP, "asynFloat32ArrayIn")
    field(INP, "@asyn($(PORT),$(CHAN),0)$(TECH)_$(PARAM)")
	field(NELM, "$(NELM)")
	field(FTVL, "FLOAT")
	field(EGU, "$(EGU)")
    field(SCAN, "I/O Intr")
}

